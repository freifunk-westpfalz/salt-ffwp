on verify "true";
on up "
    ip link set address {{ mac }} up dev $INTERFACE
    ip link set up dev bat0
		batctl -m bat0 if add $INTERFACE
    brctl addif br_ffwp bat0
";

on down "
    batctl -m bat0 if del $INTERFACE
		brctl delif br_ffwp bat0
";
